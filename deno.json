{
  "name": "jordan-lima.github.io",

  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },

  "tasks": {
    "dev": "deno run -A npm:next@15.5.2 dev --turbopack",
    "build": "deno run -A npm:next@15.5.2 build --turbopack",
    "start": "deno run -A npm:next@15.5.2 start",
    "lint": "deno lint",
    "format": "deno fmt"
  },

  "imports": {
    "react": "npm:react@19.1.0",
    "react-dom": "npm:react-dom@19.1.0",
    "next": "npm:next@15.5.2",
    "tailwindcss": "npm:tailwindcss@4",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@4",
    "autoprefixer": "npm:autoprefixer@^10",
    "postcss": "npm:postcss@^8"
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true
  },
  
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },

  "nodeModulesDir": "auto"
}
